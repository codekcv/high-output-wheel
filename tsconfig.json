{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "rootDir": ".",
    "isolatedModules": true,
    "noEmit": true
  },
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "include": ["./src"],
  "exclude": ["node_modules"]
}
